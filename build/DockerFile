FROM golang:1.21.3 AS builder

ENV GO111MODULE=on \
    CGO_ENABLED=0 \
    GOOS=linux \
    GOPROXY="https://goproxy.cn,direct"

WORKDIR /go/src

COPY . /go/src

ENV TIMEZONE "Asia/Shanghai"

RUN go build -v -o _output/tinyBalancer ./

FROM reg.hrlyit.com/base/ubuntu:20.04 
COPY --from=builder /go/src/_output/tinyBalancer /opt/

ENTRYPOINT ["./opt/tinyBalancer"]